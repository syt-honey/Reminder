/* pages/info/index.wxss */
@import "../../style/common.wxss";

.info {
 overflow: hidden;
 height: 100%;
}

.info__container {
 position: relative;
 min-height: 100%;
 box-sizing: border-box;
}

.info__container__person-info {
 display: flex;
 width: 80%;
 margin: 0 auto;
}

.info__container__person-info .info__container__person-info__name {
 flex: 1;
 margin-left: 20px;
}

.info__container__setting {
 overflow: hidden;
 width: 80%;
 margin: 60px auto;
}

view .van-cell {
 margin-top: 30px;
 border-radius: 4px;
}

.info__container__feedback {
 position: absolute;
 bottom: 10px;
 left: 50%;
 transform: translateX(-50%);
 white-space: nowrap;
 font-size: 14px;
 color: #b5b5b5;
}