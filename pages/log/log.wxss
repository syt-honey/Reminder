/* pages/log/log.wxss */
.log {
  position: relative;
  height: 100%;
  background: var(--color-white);
  font-size: var(--font-size__light-mid);
}

.log-container {
  height: 100%;
}

.log-container .calendar {
  --calendar-height: 90%;
}

.active--all {
  border-radius: 50%;
  border: 4px solid rgba(0, 194, 97, .2);
}

/* 组件样式覆盖 */
.i-bg {
  background: var(--color-white) !important;
}

view .van-calendar__selected-day {
  background: transparent;
  color: var(--color-main);
}

view .van-calendar__day {
  display: flex;
  justify-content: center;
  align-items: center;
}

view .van-calendar__day view {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 30px;
  height: 30px;
}