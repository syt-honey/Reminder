/* pages/home/index.wxss */
.home {
  height: 100%;
}

.i-bg {
  background: #fff !important;
}

.home--add-task {
  position: fixed;
  bottom: 40px;
  right: 30px;
}

.task-container {
  display: flex;
  flex-direction: column;
  width: 90%;
  margin: auto;
}

.list-end {
  display: block;
  padding: 5px 0;
  text-align: center;
  color: #b9b9b9;
  font-size: 14px;
}

view .van-dropdown-menu__title:after {
  opacity: 0;
}

view .van-dropdown-menu__title {
  padding: 8px;
  color: #00C261;
}

view .van-dropdown-menu__title:first-child {
  width: 90px;
  padding-left: 0;
}

view .van-button--normal {
  width: 100%;
  padding: 0;
  margin-top: 30px;
}

view .van-ellipsis{
  text-overflow: clip;
}