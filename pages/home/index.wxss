/* pages/home/index.wxss */
.home {
  height: 100%;
}

.i-bg {
  background: var(--color-white) !important;
}

.home__add-task {
  position: fixed;
  bottom: 80rpx;
  right: 60rpx;
  z-index: 2;
}

.home__task-container {
  display: flex;
  flex-direction: column;
  width: calc(100% - 40rpx);
  margin: auto;
}

.list-end {
  display: block;
  padding: 10rpx 0;
  text-align: center;
  color: var(--color-gray);
  font-size: var(--font-size__small);
}

task-item:last-child {
  margin-bottom: 20rpx;
}

view .van-dropdown-menu__title:after {
  opacity: 0;
}

view .van-dropdown-menu__title {
  padding: 16rpx;
  color: var(--color-main);
}

view .van-dropdown-menu__title:first-child {
  width: 180rpx;
  padding-left: 0;
}

view .van-button--normal {
  width: 100%;
  padding: 0;
  margin-top: 60rpx;
}

view .van-ellipsis{
  text-overflow: clip;
}